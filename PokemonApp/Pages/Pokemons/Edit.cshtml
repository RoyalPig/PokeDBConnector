@page
@model PokemonApp.Pages.Pokemons.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pokemon.PokemonId" />
            <div class="form-group">
                <label asp-for="Pokemon.PokemonType" class="control-label"></label>
                <select asp-for="Pokemon.PokemonType" class="form-control" asp-items="ViewBag.TypeId"></select>
                <span asp-validation-for="Pokemon.PokemonType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Name" class="control-label"></label>
                <input asp-for="Pokemon.Name" class="form-control" />
                <span asp-validation-for="Pokemon.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Description" class="control-label"></label>
                <input asp-for="Pokemon.Description" class="form-control" />
                <span asp-validation-for="Pokemon.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Height" class="control-label"></label>
                <input asp-for="Pokemon.Height" class="form-control" />
                <span asp-validation-for="Pokemon.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Weight" class="control-label"></label>
                <input asp-for="Pokemon.Weight" class="form-control" />
                <span asp-validation-for="Pokemon.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CurrentImage" class="control-label">Current Image</label>
                <img src="~/images/pokemons/@Model.Pokemon.ImageName" alt="Pokemon Image" class="img-thumbnail" style="max-width: 200px;" id="CurrentImage" />
                <label for="UploadedImage" class="control-label">Update Image</label>
                <input type="file" asp-for="UploadedImage" class="form-control" />
                <span asp-validation-for="Pokemon.ImageName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pokemon.IsGood" /> @Html.DisplayNameFor(model => model.Pokemon.IsGood)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
