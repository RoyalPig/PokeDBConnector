@page
@model PokemonApp.Pages.Pokemons.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pokemon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.ImageName)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/pokemons/@Model.Pokemon.ImageName" alt="Pokemon Image" class="img-thumbnail" style="max-width: 200px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.IsGood)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pokemon.IsGood)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pokemon.PokemonType)
        </dt>
        <dd class="col-sm-10">
            @* @Html.DisplayFor(model => model.Pokemon.PokemonType.Name) *@
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Pokemon?.PokemonId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
