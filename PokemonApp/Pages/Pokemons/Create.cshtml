@page
@model PokemonApp.Pages.Pokemons.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pokemon.SelectedTypeId" class="control-label">Pokemon Type</label>
                <select asp-for="Pokemon.SelectedTypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Name" class="control-label"></label>
                <input asp-for="Pokemon.Name" class="form-control" />
                <span asp-validation-for="Pokemon.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Description" class="control-label"></label>
                <input asp-for="Pokemon.Description" class="form-control" />
                <span asp-validation-for="Pokemon.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Height" class="control-label"></label>
                <input asp-for="Pokemon.Height" class="form-control" />
                <span asp-validation-for="Pokemon.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pokemon.Weight" class="control-label"></label>
                <input asp-for="Pokemon.Weight" class="form-control" />
                <span asp-validation-for="Pokemon.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="UploadedImage" class="control-label">Photo</label>
                <input type="file" asp-for="UploadedImage" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pokemon.IsGood" /> @Html.DisplayNameFor(model => model.Pokemon.IsGood)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


